---
import { IoLogoGithub } from 'react-icons/io5/index.js'
import { HOMEPAGE_URL } from '../config'
import HeaderLink from './HeaderLink.astro'
import ThemeToggle from './ThemeToggleButton'

import Room24Icon from './icons/Room24Icon'
---

<header class="fixed w-full p-1 z-20 backdrop-blur-md">
    <div class="mx-auto max-w-3xl">
        <nav class="flex items-center gap-4 text-base">
            <a href="/">
                <h2
                    class="font-semibold tracking-tighter p-1 font-mplus text-lg"
                >
                    <Room24Icon /> Rafa Ginard
                </h2>
            </a>
            <div class="items-center gap-6 hidden md:flex mb-1">
                <HeaderLink href={HOMEPAGE_URL}>About</HeaderLink>
                <HeaderLink href="https://github.com/Rafitis" target="_blank"
                    ><IoLogoGithub />Source</HeaderLink
                >
            </div>
            <div class="flex-1"></div>
            <ThemeToggle client:load />
        </nav>
    </div>
</header>
<style>
    header {
        margin: 0em 0 2em;
    }
    h2 {
        margin: 0.5em 0;
    }
</style>
